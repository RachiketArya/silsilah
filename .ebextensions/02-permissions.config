container_commands:
  01_adjust_storage_permissions:
    command: "chmod -R 775 /var/app/staging/storage /var/app/staging/bootstrap/cache"
    ignoreErrors: true
  02_adjust_storage_ownership:
    command: "chown -R webapp:webapp /var/app/staging/storage /var/app/staging/bootstrap/cache"
    ignoreErrors: true
  03_create_logs_directory:
    command: "mkdir -p /var/app/staging/storage/logs"
    ignoreErrors: true
  04_set_logs_permissions:
    command: "chmod -R 775 /var/app/staging/storage/logs"
    ignoreErrors: true
  05_set_logs_ownership:
    command: "chown -R webapp:webapp /var/app/staging/storage/logs"
    ignoreErrors: true
